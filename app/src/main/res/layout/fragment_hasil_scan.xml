<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_primary_light"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:layout_gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progresbar"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/bersertifikat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SERTIFIED"
                android:id="@+id/textView5"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:background="@color/color_accent"
                android:textColor="#FFFFFFFF" />

            <ImageView
                android:id="@+id/gambar_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/cover_produk_halal"
                android:layout_marginBottom="15dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_accent"/>
            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="nama produk"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/merek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="merek produk"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <TextView
                android:id="@+id/pabrik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="pabrik produk"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <TextView
                android:id="@+id/kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="kategori produk"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <TextView
                android:id="@+id/bahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="bahan produk"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <Button
                android:id="@+id/tutup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutup" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/takbersertifikat"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UNSERTIFIED"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:background="@color/color_accent"
                android:textColor="#FFFFFFFF" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="Produk ini tidak bersertifikat halal"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <Button
                android:id="@+id/lapor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laporkan" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>